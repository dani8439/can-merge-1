{
	"extends": ["@ljharb/eslint-config/node/14"],
	"rules": {
		"func-style": "off",
		"id-length": ["error", { "min": 1, "max": 64 }],
		"object-curly-newline": "off",
		"sort-keys": "off",
		"complexity": ["error", 25]
	},

	"overrides": [
		{
			"files": "bin/**",
			"rules": {
				"no-throw-literal": "off",
			},
		},
	],
}
